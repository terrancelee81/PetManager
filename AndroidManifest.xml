<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tlee1.petmanager" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/batman"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <uses-feature
            android:name="@string/step_detector"
            android:required="false" />
        <uses-feature
            android:name="@string/step_counter"
            android:required="false" />

        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <intent-filter>
            <action android:name="com.example.tlee1.petmanager.Reminders" />

            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
        />
        <activity android:name=".MainPage" >
            <intent-filter>
                <action android:name="com.example.tlee1.petmanager.MainPage" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".PetInfo" >
            <intent-filter>
                <action android:name="com.example.tlee1.petmanager.PetInfo" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Registration" >
            <intent-filter>
                <action android:name="com.example.tlee1.petmanager.Registration" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Petfitness"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.example.tlee1.petmanager.Petfitness" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
